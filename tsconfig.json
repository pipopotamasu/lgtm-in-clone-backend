{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@models/*": ["src/models/*"],
      "@util/*": ["src/util/*"],
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*"]
}
