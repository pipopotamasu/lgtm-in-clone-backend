{
  "name": "lgtm-in-clone-backend",
  "version": "0.1.0",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts && yarn lint",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --runInBand --verbose",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "start:mongodb": "mongod --dbpath=./data/db",
    "seed": "seedgoose seed",
    "reseed": "seedgoose reseed"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.0.0",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.4.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.5",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "uuid": "^7.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.30",
    "@types/body-parser": "^1.17.1",
    "@types/concurrently": "^5.1.0",
    "@types/connect-mongo": "^3.0.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^25.1.4",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.6",
    "@types/node": "^13.9.2",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.4.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "seedgoose": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  },
  "_moduleAliases": {
    "@models": "dist/src/models",
    "@util": "dist/src/util",
    "@config": "dist/src/config"
  }
}
