{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../.",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@test/*": ["test/*"],
      "@models/*": ["src/models/*"],
      "@util/*": ["src/util/*"],
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["../test/**/*"],
  "exclude": ["../node_modules"]
}
